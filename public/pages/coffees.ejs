<div class="jumbotron text-center">
    <h1>List All Coffees</h1>

    <p>{{ message }}</p>

    <div ng-controller="coffeesController as list">
        <div class ="row">
            <div class = "col-sm-6">

                <div ng-controller="mapController as vm">
                    <map center="Waterford" zoom="13">
                        <div ng-repeat="coffee in coffees">
                        <marker ng-if="coffee.location_lat != undefined" position="{{coffee.location_lat}},{{coffee.location_lng}}" ng-click="vm.showCustomMarker($event)"></marker>
                            <custom-marker id="foo" position="{{coffee.location_lat}},{{coffee.location_lng}}" ng-click="vm.closeCustomMarker($event)" >
                                <div>
                                    <img width="64" src="/images/coffeeclip.png" align="left" />
                                    <b>Shop</b> {{coffee.shop}}<br/>
                                    <b>Name</b> {{coffee.name}}<br/>
                                    <b>Price</b> {{coffee.price}}<br/>
                                </div>
                            </custom-marker>
                        </div>
                    </map>
                 </div>

            </div>
            <div class = "col-sm-6">
                <table align="center" valign="middle">
                    <tbody ng-repeat="coffee in coffees | orderBy:'-star'">
                    <tr style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle"; >


                    <td>
                        <div class="star">
                       <p><span class="glyphicon glyphicon-star gi-small">


                                </span>{{coffee.star}}</p>
                        </span>
                            </div>

                    </td>
                    <td>
                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>
                        {{coffee.name}}
                        </span>

                    </td>
                    <td>
                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>
                        {{coffee.shop}}
                        </span>

                    </td>
                    <td>
                        <span class="glyphicon glyphicon-euro">

                        </span>       {{coffee.price | number:2}}

                    </td>

                   <td>

                        <span style="height:55px; font-size:20px; margin-left:20px; margin-right:20px; valign="middle";>



                        <button type="button" class="btn btn-default" ng-click="delete(coffee._id)">
                            <span class="glyphicon glyphicon-remove"></span> Remove
                        </button>
                        <button type="button" class="btn btn-default" ng-click="edit(coffee._id)">
                            <span class="glyphicon glyphicon-edit"></span> Edit
                        </button>
                        </span>
                    </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>